<Simulation verbosity="debug">
  <TestInfo>
    <name>DymolaOptimize</name>
    <author>garrm</author>
    <created>2021-11-24</created>
    <description>
      Use Raven-runs-raven interface to optimize parameters of a Dymola model.
      Finite difference optimizer using a distance between experimental and model data as target. 
      This distance is computed by another RAVEN instance running a 'validation' file
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>.</WorkingDir>
    <Sequence>optimize,print</Sequence>
    <batchSize>2</batchSize>
  </RunInfo>

  <Steps>
    <MultiRun name="optimize">
      <Input class="Files" type="raven">valInput</Input>
      <Model class="Models" type="Code">raven</Model>
      <Optimizer class="Optimizers" type="SPSA">opter</Optimizer>
      <SolutionExport class="DataObjects" type="PointSet">optExport</SolutionExport>
      <Output class="DataObjects" type="PointSet">optOut</Output>
    </MultiRun>
    <IOStep name="print">
      <Input class="DataObjects" type="PointSet">optExport</Input>
      <Input class="DataObjects" type="PointSet">optOut</Input>
      <Output class="OutStreams" type="Print">optExport</Output>
      <Output class="OutStreams" type="Print">optOut</Output>
    </IOStep>
  </Steps>

  <Files>
    <Input name="valInput" type="raven">pendulumValidation.xml</Input>
  </Files>

  <Models>
    <Code name="raven" subType="RAVEN">
      <executable>%FRAMEWORK_DIR%/../raven_framework</executable>
      <outputExportOutStreams>valOut</outputExportOutStreams>
      <alias type="input" variable="m">Samplers|MonteCarlo@name:MC|constant@name:m</alias>
      <alias type="input" variable="L">Samplers|MonteCarlo@name:MC|constant@name:L</alias>
      <alias type="input" variable="g">Samplers|MonteCarlo@name:MC|constant@name:g</alias>
    </Code>
  </Models>

  <Distributions>
    <Uniform name="mass_dist">
      <lowerBound>0.1</lowerBound>
      <upperBound>10.0</upperBound>
    </Uniform>
    <Uniform name="length_dist">
      <lowerBound>0.1</lowerBound>
      <upperBound>2.0</upperBound>
    </Uniform>
    <Uniform name="gravity_dist">
      <lowerBound>9.0</lowerBound>
      <upperBound>11.0</upperBound>
    </Uniform>
  </Distributions>

  <Optimizers>
    <GradientDescent name="opter">
      <objective>mean_absolute_error_Angle_expDataSync_Output_phi</objective>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
      <samplerInit>
        <limit>100</limit>
        <initialSeed>42</initialSeed>
        <writeSteps>every</writeSteps>
      </samplerInit>
      <gradient>
        <FiniteDifference />
      </gradient>
      <stepSize>
        <GradientHistory>
          <growthFactor>1.25</growthFactor>
          <shrinkFactor>1.1</shrinkFactor>
        </GradientHistory>
      </stepSize>
      <acceptance>
        <Strict />
      </acceptance>
      <variable name="m">
        <distribution>mass_dist</distribution>
        <initial>0.2,5.0,7.0</initial>
      </variable>
      <variable name="L">
        <distribution>length_dist</distribution>
        <initial>0.2,0.5,0.7</initial>
      </variable>
      <variable name="g">
        <distribution>gravity_dist</distribution>
        <initial>9.5,10.0,10.5</initial>
      </variable>
    </GradientDescent>
  </Optimizers>

  <OutStreams>
    <Print name="optOut">
      <type>csv</type>
      <source>optOut</source>
    </Print>
    <Print name="optExport">
      <type>csv</type>
      <source>optExport</source>
      <clusterLabel>trajID</clusterLabel>
    </Print>
  </OutStreams>

  <DataObjects>
    <PointSet name="optOut">
      <Input>g, L, m</Input>
      <Output>mean_absolute_error_Angle_expDataSync_Output_phi</Output>
    </PointSet>
    <PointSet name="optExport">
      <Input>trajID</Input>
      <Output>g, L, m, mean_absolute_error_Angle_expDataSync_Output_phi, stepSize, iteration, accepted, conv_gradient</Output>
    </PointSet>
  </DataObjects>
</Simulation>
